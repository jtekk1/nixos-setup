# Gotham Theme Color Definitions
# A very dark Vim colorscheme inspired by Batman's city
# https://github.com/whatyouhide/vim-gotham

{
  # Core color palette - Backgrounds & Panels
  bg_primary = "#0c1014";      # Darkest background (base0)
  bg_secondary = "#11151c";    # Base1 for panels
  bg_tertiary = "#091f2e";     # Base2 for depth

  # Text & UI
  fg_primary = "#d3ebe9";      # Lightest foreground (base7)
  fg_secondary = "#599cab";    # Base5 for secondary text
  fg_dim = "#4e5166";          # Violet for comments

  # Accent colors
  accent_primary = "#33859E";   # Cyan - primary accent
  accent_secondary = "#2aa889"; # Green - secondary accent
  accent_tertiary = "#edb443";  # Yellow - tertiary accent

  # Special purpose colors
  cursor = "#d3ebe9";          # Lightest cursor
  selection_bg = "#0a3749";    # Base3 selection
  selection_fg = "#d3ebe9";    # Lightest text on selection
  url = "#33859E";             # Cyan for URLs

  # Border colors
  border_active_1 = "#33859E";  # Cyan
  border_active_2 = "#2aa889";  # Green
  border_inactive = "#245361";  # Base4

  # Terminal color palette (16 colors)
  color0 = "#0c1014";   # Base0 (darkest)
  color1 = "#c23127";   # Red
  color2 = "#2aa889";   # Green
  color3 = "#edb443";   # Yellow
  color4 = "#195466";   # Blue
  color5 = "#888ca6";   # Magenta
  color6 = "#33859E";   # Cyan
  color7 = "#99d1ce";   # Base6

  # Bright variants
  color8 = "#245361";   # Bright Black (base4)
  color9 = "#d26937";   # Bright Red (orange)
  color10 = "#2aa889";  # Bright Green
  color11 = "#edb443";  # Bright Yellow
  color12 = "#599cab";  # Bright Blue (base5)
  color13 = "#888ca6";  # Bright Magenta
  color14 = "#33859E";  # Bright Cyan
  color15 = "#d3ebe9";  # Bright White (base7)

  # Wallpapers
  wallpapers = [];
}
