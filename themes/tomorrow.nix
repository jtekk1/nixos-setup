# Tomorrow Theme Color Definitions
# A light theme with muted colors and sensible syntax highlighting
# https://github.com/chriskempson/tomorrow-theme

{
  # Core color palette - Backgrounds & Panels
  bg_primary = "#ffffff";      # Pure white background
  bg_secondary = "#efefef";    # Very light gray for panels
  bg_tertiary = "#d6d6d6";     # Light gray for depth

  # Text & UI
  fg_primary = "#4d4d4c";      # Dark gray text
  fg_secondary = "#4271ae";    # Blue for secondary text
  fg_dim = "#8e908c";          # Medium gray for comments

  # Accent colors
  accent_primary = "#4271ae";   # Blue - primary accent
  accent_secondary = "#718c00"; # Green - secondary accent
  accent_tertiary = "#f5871f";  # Orange - tertiary accent

  # Special purpose colors
  cursor = "#4d4d4c";          # Dark gray cursor
  selection_bg = "#d6d6d6";    # Light gray selection
  selection_fg = "#4d4d4c";    # Dark gray text on selection
  url = "#3e999f";             # Aqua for URLs

  # Border colors
  border_active_1 = "#4271ae";  # Blue
  border_active_2 = "#718c00";  # Green
  border_inactive = "#8e908c";  # Medium gray

  # Terminal color palette (16 colors)
  color0 = "#ffffff";   # Background
  color1 = "#c82829";   # Red
  color2 = "#718c00";   # Green
  color3 = "#eab700";   # Yellow
  color4 = "#4271ae";   # Blue
  color5 = "#8959a8";   # Purple
  color6 = "#3e999f";   # Aqua
  color7 = "#4d4d4c";   # Foreground

  # Bright variants
  color8 = "#8e908c";   # Comment gray
  color9 = "#c82829";   # Bright Red
  color10 = "#718c00";  # Bright Green
  color11 = "#eab700";  # Bright Yellow
  color12 = "#4271ae";  # Bright Blue
  color13 = "#8959a8";  # Bright Purple
  color14 = "#3e999f";  # Bright Aqua
  color15 = "#1d1f21";  # Black

  # Wallpapers
  wallpapers = [];
}
