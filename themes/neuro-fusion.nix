# Neuro-Fusion Theme Color Definitions
# An Autism & ADHD Inspired Theme by JTekk
# A deeply personal theme that visualizes the vibrant, complex, and beautiful neurology
# of the autistic and ADHD mind. It merges the cool, intricate focus of autism with
# the warm, dynamic energy of ADHD.

{
  # Core color palette - The Mindscape (Backgrounds & Panels)
  bg_primary = "#120020";      # Deep Space Purple - The vast, deep background of the mind
  bg_secondary = "#330066";    # Cyber Grape - For focused UI elements and panels
  bg_tertiary = "#330066";     # Cyber Grape

  # The Interface (Text & UI)
  fg_primary = "#C0C0C0";      # Starlight Silver - Primary text, clear and readable
  fg_secondary = "#00FFFF";    # Electric Cyan
  fg_dim = "#888888";          # Dim Gray - Secondary text and comments

  # The Flare (Warm ADHD Accents) & Focused Flow (Cool Autistic Accents)
  accent_primary = "#DD00FF";   # Neon Orchid - A focused, purple-ish blue for structure
  accent_secondary = "#00FFFF"; # Electric Cyan - Data types, informational elements
  accent_tertiary = "#FFC107";  # Saffron Glow - Creative sparks, secondary accents

  # Special purpose colors
  cursor = "#FFC107";          # Saffron Yellow cursor
  selection_bg = "#330066";    # Cyber Grape
  selection_fg = "#FFFFFF";    # Pure white for selection
  url = "#00FFFF";

  # Border colors for Mango
  border_active_1 = "#00FFFF";  # Electric Cyan gradient start
  border_active_2 = "#DD00FF";  # Neon Orchid gradient end
  border_inactive = "#33006666"; # Cyber Grape with transparency

  # Terminal color palette (16 colors) - Neuro-Fusion proper colors
  color0 = "#000000";   # Jet Black
  color1 = "#FF5722";   # Fiery Orange - Bursts of energy
  color2 = "#FFC107";   # Saffron Yellow - Creative sparks
  color3 = "#FFD700";   # Rich Gold - Intense focus points
  color4 = "#DD00FF";   # Neon Orchid (was Cyber Grape in original)
  color5 = "#FF69B4";   # Hot Pink - Vibrant creative accent
  color6 = "#00FFFF";   # Electric Blue/Cyan
  color7 = "#f0f0f0";   # Silver/Light Gray

  # Bright variants
  color8 = "#555555";   # Dark gray for contrast
  color9 = "#FF5722";   # Fiery Orange (already bright)
  color10 = "#FFC107";  # Saffron Yellow (already bright)
  color11 = "#FFD700";  # Rich Gold (already bright)
  color12 = "#00FFFF";  # Electric Blue
  color13 = "#FF00FF";  # Pure Magenta
  color14 = "#00FFFF";  # Electric Blue (repeated for vibrancy)
  color15 = "#FFFFFF";  # Pure White

  # Mango-specific override colors (from Yaru theme)
  mango_overrides = {
    rootcolor = "#2c2c2c";
    bordercolor = "#5294E2";
    focuscolor = "#5294E2";
    maxmizescreencolor = "#5294E2";
    urgentcolor = "#E95420";
  };

  # Wallpapers (existing ones remain unchanged)
  wallpapers = [];
}