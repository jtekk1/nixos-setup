# Apprentice Theme Color Definitions
# A dark, low-contrast color scheme by Romain Lafourcade
# https://romainl.github.io/Apprentice/
#
# Apprentice is designed to be easy on the eyes with subtle,
# muted colors inspired by the Sorcerer color scheme.

{
  # Core color palette - Backgrounds & Panels
  bg_primary = "#262626";      # Primary dark gray background
  bg_secondary = "#303030";    # Slightly lighter gray for panels
  bg_tertiary = "#3A3A3A";     # Tertiary background for depth

  # Text & UI
  fg_primary = "#BCBCBC";      # Primary light gray text
  fg_secondary = "#8FAFD7";    # Bright blue for secondary text
  fg_dim = "#6C6C6C";          # Dim gray for comments

  # Accent colors
  accent_primary = "#5F87AF";   # Muted blue - primary accent
  accent_secondary = "#87AF87"; # Muted green - secondary accent
  accent_tertiary = "#FF8700";  # Bright orange - tertiary accent

  # Special purpose colors
  cursor = "#FFFFAF";          # Bright yellow cursor
  selection_bg = "#5F5F87";    # Muted purple for selection
  selection_fg = "#FFFFFF";    # White text on selection
  url = "#5FAFAF";             # Cyan for URLs

  # Border colors
  border_active_1 = "#5F87AF";  # Muted blue
  border_active_2 = "#87AF87";  # Muted green
  border_inactive = "#444444";  # Bright black

  # Terminal color palette (16 colors) - Apprentice proper colors
  color0 = "#1C1C1C";   # Black
  color1 = "#AF5F5F";   # Red
  color2 = "#5F875F";   # Green
  color3 = "#87875F";   # Yellow
  color4 = "#5F87AF";   # Blue
  color5 = "#5F5F87";   # Magenta
  color6 = "#5F8787";   # Cyan
  color7 = "#6C6C6C";   # White (dim)

  # Bright variants
  color8 = "#444444";   # Bright Black
  color9 = "#FF8700";   # Bright Red (orange)
  color10 = "#87AF87";  # Bright Green
  color11 = "#FFFFAF";  # Bright Yellow
  color12 = "#8FAFD7";  # Bright Blue
  color13 = "#8787AF";  # Bright Magenta
  color14 = "#5FAFAF";  # Bright Cyan
  color15 = "#FFFFFF";  # Bright White

  # Wallpapers
  wallpapers = [];
}
