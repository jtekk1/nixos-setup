# Dracula Theme Color Definitions
# A dark theme with vibrant colors and WCAG Level AA accessibility
# https://github.com/dracula/dracula-theme

{
  # Core color palette - Backgrounds & Panels
  bg_primary = "#282a36";      # Background
  bg_secondary = "#44475a";    # Current line / selection
  bg_tertiary = "#44475a";     # Selection

  # Text & UI
  fg_primary = "#f8f8f2";      # Foreground
  fg_secondary = "#8be9fd";    # Cyan for secondary text
  fg_dim = "#6272a4";          # Comment

  # Accent colors (from terminal palette: color8, color4, color12)
  accent_primary = "#6272a4";
  accent_secondary = "#bd93f9";
  accent_tertiary = "#d6acff";

  # Special purpose colors
  cursor = "#f8f8f2";          # Foreground cursor
  selection_bg = "#44475a";    # Selection
  selection_fg = "#f8f8f2";    # Foreground on selection
  url = "#8be9fd";             # Cyan for URLs

  # Border colors
  border_active_1 = "#bd93f9";  # Purple
  border_active_2 = "#ff79c6";  # Pink
  border_inactive = "#6272a4";  # Comment

  # Terminal color palette (16 colors)
  color0 = "#21222c";   # Black (darker than bg)
  color1 = "#ff5555";   # Red
  color2 = "#50fa7b";   # Green
  color3 = "#f1fa8c";   # Yellow
  color4 = "#bd93f9";   # Blue (purple)
  color5 = "#ff79c6";   # Magenta (pink)
  color6 = "#8be9fd";   # Cyan
  color7 = "#f8f8f2";   # White

  # Bright variants
  color8 = "#6272a4";   # Bright Black (comment)
  color9 = "#ff6e6e";   # Bright Red
  color10 = "#69ff94";  # Bright Green
  color11 = "#ffffa5";  # Bright Yellow
  color12 = "#d6acff";  # Bright Blue (purple)
  color13 = "#ff92df";  # Bright Magenta (pink)
  color14 = "#a4ffff";  # Bright Cyan
  color15 = "#ffffff";  # Bright White

  # Wallpapers
  wallpapers = [];
}
