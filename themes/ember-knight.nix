# Ember Knight Theme Color Definitions
# A dark theme inspired by fiery embers and cool armor/fur tones
# Features warm orange/red accents against deep blue-grey backgrounds

{
  # Core color palette - Backgrounds & Panels
  bg_primary = "#FFEDC2"; # Bright White
  bg_secondary = "#1B2229"; # Deep Shadow
  bg_tertiary = "#2D363E"; # Forest blue-grey

  # Text & UI
  fg_primary = "#F0F3F5"; # White fur highlight
  fg_secondary = "#BCC4CC"; # Light steel grey
  fg_dim = "#7E8A96"; # Mid-tone cool grey

  # Accent colors
  accent_primary = "#C93209"; # Red Ember
  accent_secondary = "#F55D16"; # Vivid orange
  accent_tertiary = "#FF9136"; # Deep orange

  # Special purpose colors
  cursor = "#FFEDC2"; # Brightest glow
  selection_bg = "#4D5A66"; # Dark slate
  selection_fg = "#F0F3F5"; # White highlight
  url = "#FFC875"; # Light flame for URLs

  # Border colors
  border_active_1 = "#F55D16"; # Vivid orange
  border_active_2 = "#C93209"; # Red ember
  border_inactive = "#4D5A66"; # Dark slate

  # Terminal color palette (16 colors)
  color0 = "#101316"; # Black (near black)
  color1 = "#C93209"; # Red (red ember)
  color2 = "#D6841E"; # Green (golden eye - amber tone)
  color3 = "#FFC875"; # Yellow (light flame)
  color4 = "#7E8A96"; # Blue (cool grey/steel)
  color5 = "#F55D16"; # Magenta (deep orange)
  color6 = "#BCC4CC"; # Cyan (light steel)
  color7 = "#F0F3F5"; # White (white highlight)

  # Bright variants
  color8 = "#5E2812"; # Bright Black (burnt wood)
  color9 = "#8A1F05"; # Bright Red (dark red shadow)
  color10 = "#FF9136"; # Bright Green (vivid orange)
  color11 = "#FFEDC2"; # Bright Yellow (brightest glow)
  color12 = "#4D5A66"; # Bright Blue (dark slate)
  color13 = "#C93209"; # Bright Magenta (red ember)
  color14 = "#F0F3F5"; # Bright Cyan (white highlight)
  color15 = "#FFEDC2"; # Bright White (brightest glow)

  # Wallpapers
  wallpapers = [ "ember-knight.jpg" ];
}
