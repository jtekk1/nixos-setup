# Fairyfloss Theme Color Definitions
# A fun, purple-based text editor theme
# https://github.com/sailorhg/fairyfloss

{
  # Core color palette - Backgrounds & Panels
  bg_primary = "#5A5475";      # Purple-gray background
  bg_secondary = "#716799";    # Line highlight purple
  bg_tertiary = "#8077A8";     # Selection purple

  # Text & UI
  fg_primary = "#F8F8F2";      # Light text
  fg_secondary = "#FFF352";    # Yellow for secondary text
  fg_dim = "#E6C000";          # Darker yellow for comments

  # Accent colors
  accent_primary = "#FFB8D1";   # Pink - primary accent
  accent_secondary = "#C2FFDF"; # Mint green - secondary accent
  accent_tertiary = "#FFEA00";  # Bright yellow - tertiary accent

  # Special purpose colors
  cursor = "#F8F8F0";          # Light cursor
  selection_bg = "#8077A8";    # Selection purple
  selection_fg = "#F8F8F2";    # Light text on selection
  url = "#C5A3FF";             # Light purple for URLs

  # Border colors
  border_active_1 = "#FFB8D1";  # Pink
  border_active_2 = "#C2FFDF";  # Mint green
  border_inactive = "#A8757B";  # Muted pink

  # Terminal color palette (16 colors)
  color0 = "#5A5475";   # Background
  color1 = "#FF857F";   # Red (function arguments)
  color2 = "#C2FFDF";   # Green (mint)
  color3 = "#FFEA00";   # Yellow (strings)
  color4 = "#C5A3FF";   # Blue (purple)
  color5 = "#FFB8D1";   # Magenta (pink)
  color6 = "#C2FFDF";   # Cyan (mint green)
  color7 = "#F8F8F2";   # White

  # Bright variants
  color8 = "#A8757B";   # Bright Black
  color9 = "#FF857F";   # Bright Red
  color10 = "#C2FFDF";  # Bright Green
  color11 = "#FFF352";  # Bright Yellow
  color12 = "#C5A3FF";  # Bright Blue
  color13 = "#FFB8D1";  # Bright Magenta
  color14 = "#C2FFDF";  # Bright Cyan
  color15 = "#F8F8F2";  # Bright White

  # Wallpapers
  wallpapers = [];
}
