  color2 = "#5F5F00";   # Dark green
  color3 = "#D0B03C";   # Yellow
  color4 = "#005F87";   # Dark blue
  color5 = "#63001C";   # Dark pink (magenta)
  color6 = "#538192";   # Middle dark blue (cyan)
  color7 = "#444444";   # Dark gray (white)

  # Bright variants
  color8 = "#999999";   # Bright Black
  color9 = "#FF0055";   # Bright Red
  color10 = "#739200";  # Bright Green
  color11 = "#D0B03C";  # Bright Yellow
  color12 = "#538192";  # Bright Blue
  color13 = "#D65E76";  # Bright Magenta
  color14 = "#9FD3E6";  # Bright Cyan
  color15 = "#111111";  # Bright White (darkest)

  # Wallpapers
  wallpapers = [];
}
