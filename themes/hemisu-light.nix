# Hemisu Light Theme Color Definitions
# A balanced color scheme with carefully selected colors (Light variant)
# https://noahfrederick.com/log/hemisu-for-os-x-terminal.html

{
  # Core color palette - Backgrounds & Panels
  bg_primary = "#FFFFFF";      # White background
  bg_secondary = "#EEEEEE";    # Almost white for panels
  bg_tertiary = "#BBBBBB";     # Light gray for depth

  # Text & UI
  fg_primary = "#444444";      # Dark gray text
  fg_secondary = "#005F87";    # Dark blue for secondary text
  fg_dim = "#999999";          # Middle light gray for comments

  # Accent colors
  accent_primary = "#005F87";   # Dark blue - primary accent
  accent_secondary = "#5F5F00"; # Dark green - secondary accent
  accent_tertiary = "#D0B03C";  # Yellow - tertiary accent

  # Special purpose colors
  cursor = "#444444";          # Dark gray cursor
  selection_bg = "#9FD3E6";    # Middle light blue selection
  selection_fg = "#111111";    # Almost black text on selection
  url = "#005F87";             # Dark blue for URLs

  # Border colors
  border_active_1 = "#005F87";  # Dark blue
  border_active_2 = "#5F5F00";  # Dark green
  border_inactive = "#BBBBBB";  # Light gray

  # Terminal color palette (16 colors)
  color0 = "#FFFFFF";   # White (background)
